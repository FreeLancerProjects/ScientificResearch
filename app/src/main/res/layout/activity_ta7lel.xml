<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
    <data>
        <variable
            name="event"
            type="com.semicolon.scientificresearch.EventListener.Events"/>
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/ko7ly"
                app:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/back"
                        android:padding="12dp"
                        android:clickable="true"
                        android:layout_alignParentLeft="true"
                        android:onClick="@{event::onClickListener}"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="تحليل احصائي (spss)"
                        />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/statistics"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/mo3dla_bg"
            android:hint="إسم المؤلف"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/ko7ly"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mo3dla_bg"
            android:hint="السنة"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/ko7ly"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/mo3dla_bg"
            android:hint="عنوان البحث"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/ko7ly"
            />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_bg"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="إرسال"
            android:textSize="15sp"
            android:onClick="@{event::onClickListener}"

            />
    </LinearLayout>
</ScrollView>
</layout>
